# ===========================================
# Laro Backend Configuration
# Copy this file to .env and fill in your values
# ===========================================

# Database (PostgreSQL)
DATABASE_URL=postgresql://laro:your-secure-password@localhost:5432/laro

# Security - CHANGE THIS IN PRODUCTION!
JWT_SECRET=generate-a-secure-random-string-here-min-32-chars

# AI Provider (choose one)
LLM_PROVIDER=ollama
OLLAMA_URL=http://localhost:11434
OLLAMA_MODEL=llama3

# Or use cloud AI:
# LLM_PROVIDER=openai
# OPENAI_API_KEY=sk-your-key

# LLM_PROVIDER=anthropic
# ANTHROPIC_API_KEY=sk-ant-your-key

# Email (for password reset)
EMAIL_ENABLED=false
# RESEND_API_KEY=re_your-key
# SMTP_FROM_EMAIL=noreply@yourdomain.com

# OAuth (optional)
# GOOGLE_CLIENT_ID=your-client-id.apps.googleusercontent.com
# GOOGLE_CLIENT_SECRET=your-secret
# GITHUB_CLIENT_ID=your-client-id
# GITHUB_CLIENT_SECRET=your-secret
# OAUTH_REDIRECT_BASE_URL=https://yourdomain.com

# Redis (optional - for multi-instance deployments)
# REDIS_URL=redis://localhost:6379
